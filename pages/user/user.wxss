.user {
  min-height: 100vh;
  background-color: #ededed;
}
.user_head_wrap {
  height: 53.33333333vw;
  background: linear-gradient(to top right, #82b7ee, #5796dd);
  overflow: hidden;
}
.user_head_wrap #line_canvas {
  width: 100%;
  height: 100%;
  z-index: 1;
}
.user_head_wrap .user_head {
  margin-top: 16vw;
  text-align: center;
  position: relative;
}
.user_head_wrap .user_head > image {
  width: 20.53333333vw;
  height: 20.53333333vw;
  border-radius: 50%;
  border: 2px solid #fff;
  margin: 0 auto;
  box-shadow: 2px 2px 8px rgba(82, 82, 82, 0.8);
}
.user_head_wrap .user_head .username {
  display: block;
  color: #fff;
  font-size: 4vw;
  letter-spacing: 2px;
}
.user_head_wrap .user_head .designation {
  position: absolute;
  font-size: 2.4vw;
  top: 22.66666667vw;
  right: 21.33333333vw;
  color: #a67d34;
  background: linear-gradient(#f9f297, #dec436);
  border-radius: 10px;
  padding: 1px 10px;
  letter-spacing: 2px;
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.08);
}
.user_bill_wrap {
  height: 20vw;
  background-color: #fff;
  font-size: 3.2vw;
  display: flex;
}
.user_bill_wrap > view {
  flex: 1;
  flex-direction: column;
}
.user_bill_wrap .user_bill_left {
  border-right: 1px solid rgba(226, 226, 226, 0.8);
}
.user_bill_wrap .user_bill_right {
  border-left: 1px solid rgba(226, 226, 226, 0.8);
}
.user_func_wrap {
  margin-top: 2.66666667vw;
}
.user_func_wrap .user_func {
  height: 13.33333333vw;
  background-color: #fff;
  margin-bottom: 2px;
  font-size: 4vw;
}
.user_func_wrap .user_func image {
  width: 5.06666667vw;
  height: 5.06666667vw;
  margin: 0 3.73333333vw;
}
