.chart_head {
    background-color: #fff;
    padding:2vw 0;
}
.chart_head>text {
    font-size:4.5vw;
    margin:0 3vw;
}
.main {
    margin:5vw 0;
}
.bill_bar {
    margin-bottom: 2vw;
}

.member>view,.notice>view {
    height:20vw;
    background-color: #fff;
    margin-bottom: 2vw;
    padding:0 8vw;
}
.m_left image:nth-child(1) {
    width:10vw;
    height:10vw;
    background-color: #6dabf1;
    border-radius:50%;
}
.m_left text {
    margin-left:3vw;
}
.m_right image {
    width:4vw;
    height:4vw;
    background-color: #eb8b88;
    border-radius:50%;
    padding:1.5vw;
}

.gly {
    border-radius:5px;
    background-color: #ebca59;
    color: #fff;
    font-size:3vw;
    padding:0.5vw;
}
.notice .m_right {
    font-size:3vw;
    color:#ccc;
}
button.addX {
    box-sizing:content-box;
    border:none;
    line-height: 0;
}