.chart_head {
    width:100%;
    background-color: #fff;
    padding:2vw 0;
    position:fixed;
    top:0;
    z-index: 5;
}
.chart_head>text {
    font-size:4.5vw;
    margin:0 3vw;
}

.head_img {
    position:absolute;
    right:2vw;
    width:8vw;
    height:8vw;
    top:3vw;
    z-index:5;
    transition:0.5s all;
}

.head_img .text {
    width:60vw;
    padding:3vw;
    display: block;
    color:#fff;
    margin:0 auto;
    font-size:5vw;
    text-align: center;
    border-radius: 5px;
    box-shadow: 1px 1px 3px #bebebc;
}

.head_img image {
    width:100%;
    height:100%;
}
.main {
    padding:17vw 0 2vw 0;
}
.bill_bar {
    margin-bottom: 2vw;
}

.member>view,.notice>view {
    height:20vw;
    background-color: #fff;
    margin-bottom: 2vw;
    padding:0 8vw;
}
.m_left image:nth-child(1) {
    width:8vw;
    height:8vw;
    padding:2vw;
    background-color: #72b1eb;
    border-radius:50%;
}
.m_left text {
    margin-left:3vw;
    font-size:4vw;
    color: #656565;
}
.m_right image {
    width:4vw;
    height:4vw;
    background-color: #eb8b88;
    border-radius:50%;
    padding:1.5vw;
}

.gly {
    border-radius:5px;
    background-color: #ebca59;
    color: #fff;
    font-size:3vw;
    padding:0.5vw;
}
.notice .m_right {
    font-size:3vw;
    color:#ccc;
}
button.addX {
    box-sizing:content-box;
    border:none;
    line-height: 0;
}