.head {
    height:25vw;
    background-color: #72b1eb;
    border:1px solid transparent;
    width:100vw;
    color:#fff;
}

.head .head_del >image {
    width:10vw;
    height:10vw;
    padding:4vw;
    border-radius:50%;
    box-shadow: 1px 1px 4px #82837c;
    background-color: #fff;
}
.head .head_del {
    margin:3vw 0 0 3vw;
}

.head>text {
    display: block;
    font-size:5.5vw;
    text-align: center;
}
.head_del>text {
    position:relative;
    top:-5vw;
    left:2vw;
    font-size:5vw;
}
.main {
    margin: 10vw 5vw 0 5vw;
    font-size:4.5vw;
}
.main>view {
    margin-bottom: 8vw;
}
.tab {
    background-color: #68a1df;
    color:#fff;
    box-shadow: 0 0 2px #5180b4;
    border-radius:5px;
    padding:2vw;
}