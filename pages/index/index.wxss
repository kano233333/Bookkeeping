  height: 13.06666667vw;
  margin: 1px 0;
  border-radius: 4px;
}
.nav_bg {
  font-size: 15px;
  position: relative;
}
.t_select {
  width: 16.26666667vw;
  position: absolute;
  left: 2.66666667vw;
  top: 3.06666667vw;
  overflow: hidden;
  transition: 0.2s height;
  color: #fff;
  font-size: 3.2vw;
}
.t_select > text {
  height: 6.13333333vw;
  border-radius: 20px;
  display: block;
  background: linear-gradient(to left, #8cbef4, #4c91df);
  text-align: center;
  line-height: 1.8;
}
.time_picker {
  text-align: center;
}
