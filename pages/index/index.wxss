  min-width: 100vw;
  min-height: 100vh;
  border: 1px solid transparent;
  background-color: #ededed;
}
.fixed_head {
  position: fixed;
  top: 0;
  z-index: 3333;
}
.bill_select {
  width: 100vw;
  height: 10.66666667vw;
  border-bottom: 1px solid #ededed;
  background-color: #fff;
  font-size: 15px;
  position: relative;
}
.bill_total {
  width: 100vw;
  height: 13.06666667vw;
  background-color: #fff;
  font-size: 3.2vw;
  letter-spacing: 2px;
  padding: 0 4vw;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.bill_total > .wrap {
  position: relative;
}
