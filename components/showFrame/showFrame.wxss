.box {
    position:fixed;
    top:18vh;
    left:0;
    right:0;
    margin:0 auto;
    width:60vw;
    height:10vw;
    border-radius:10px;
    z-index:9999;
    opacity: 0;
    text-align: center;
    animation:5s frame_animate forwards;
}

.box image {
    width:30vw;
    height:22.5vw;
    position: absolute;
    left:0;
    right: 0;
    margin: 0 auto;
    top:-14vh;
}

.box text {
    font-size:18px;
    background:linear-gradient(110deg, #bc994e 0%, #bc994e 33%, #d8c498 44%, #775f2d 55%, #bc994e 67%, #bc994e 100%);
    -webkit-background-clip:text;
    -webkit-text-fill-color:transparent;
    background-position-x:0;
    animation:1s text_animate initial;
}

@keyframes frame_animate {
    0% {
        transform: translateY(-100px);
        opacity: 0;
    }
    15% {
        transform: translateY(0);
        opacity: 1;
    }
    85% {
        transform: translateY(0);
        opacity: 1;
    }
    100% {
        transform: translateY(-40px);
        opacity: 0;
    }
}

@keyframes text_animate {
    0% {
        background-position-x:0;
    }
    100% {
        background-position-x:-150%;
    }
}