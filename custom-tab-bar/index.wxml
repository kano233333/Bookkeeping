<!--miniprogram/custom-tab-bar/index.wxml-->
<view>
<cover-view class="tab-bar">
  <cover-view class="tab-bar-border"></cover-view>
  <cover-view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
    <cover-image src="{{index === selected  ? item.selectedIconPath : item.iconPath}}"></cover-image>
    <cover-view style="color: {{(index === selected || index==2) ? selectedColor : color}}">{{item.text}}</cover-view>
  </cover-view>
</cover-view>
  <view class="add-wrap" wx:if="{{addShow}}">
    <view class="add-bg" bindtap="hideAdd"></view>
    <view class="add">
      <view>
        <image src="/static/imgs/add/1.png" />
        <text>扫一扫</text>
      </view>
      <navigator class="sd_add" url="/pages/sdAdd/sdAdd?type=0">
        <image src="/static/imgs/add/2.png" />
        <text>手动添加</text>
      </navigator>
      <view>
        <image src="/static/imgs/add/3.png" />
        <text>小计帮帮</text>
      </view>
      <image bindtap="hideAdd" class="cancel" src="/static/icon/cha.svg"></image>
    </view>
  </view>
</view>

